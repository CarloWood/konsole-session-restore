[Unit]
Description=Save Konsole state when Konsole PID %i stops
# Stop this before konsole is stopped.
PartOf=app-org.kde.konsole-%i.scope
After=app-org.kde.konsole-%i.scope
# Or stop this if fluxbox is terminated (before Xorg is killed).
PartOf=default.target
After=default.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/true
ExecStop=%h/.local/bin/konsole-save
TimeoutStopSec=10s
